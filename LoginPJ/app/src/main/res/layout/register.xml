<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragment.Register">
    <data>
        <variable
            name="user"
            type="com.example.example_kakaologinapi.database.User" />
        <variable
            name="loginViewModel"
            type="com.example.example_kakaologinapi.viewModel.LoginViewModel" />
        <import type="com.example.example_kakaologinapi.R"/>
        <variable
            name="register"
            type="com.example.example_kakaologinapi.fragment.Register" />
        <variable
            name="navigation"
            type="androidx.navigation.NavController" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="회원가입"
            android:textSize="20sp"
            android:textColor="#6E6C6C"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/etName"/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etName"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv1"
            app:startIconDrawable="@drawable/ic_baseline_person_24"
            app:helperTextTextColor="#00BCD4">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="닉네임"
                android:ems="10"
                android:onTextChanged="@{register.checkNameIsCorrect}"
                android:inputType="textPersonName"
                android:text="@={user.userName}"
                android:textColor="#6E6C6C"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etID"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toTopOf="@+id/etPW"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etName"
            app:startIconDrawable="@drawable/ic_baseline_assignment_ind_24"
            app:helperTextTextColor="#00BCD4">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="아이디"
                android:text="@={user.userId}"
                android:inputType="textPersonName"
                android:ems="10"
                android:onTextChanged="@{register.checkIdIsCorrect}"
                android:textColor="#6E6C6C"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etPW"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:passwordToggleEnabled="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etID"
            app:layout_constraintBottom_toTopOf="@id/etPWCheck"
            app:startIconDrawable="@drawable/ic_baseline_lock_24"
            app:helperTextTextColor="#00BCD4">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextPW"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="비밀번호"
                android:ems="20"
                android:text="@={user.userPw}"
                android:inputType="textPassword"
                android:onTextChanged="@{register.checkPwIsCorrect}"
                android:textColor="#6E6C6C"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etPWCheck"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:passwordToggleEnabled="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etPW"
            app:startIconDrawable="@drawable/ic_baseline_lock_24"
            app:helperTextTextColor="#00BCD4">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextPWCheck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="비밀번호 확인"
                android:ems="20"
                android:text="@{user.userPw}"
                android:inputType="textPassword"
                android:onTextChanged="@{register.checkPwDoubleIsCorrect}"
                android:textColor="#6E6C6C"/>
        </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.button.MaterialButton
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:id="@+id/btn_signUP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:text="가입하기"
        android:textColor="#6E6C6C"
        app:layout_constraintTop_toBottomOf="@id/etPWCheck"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>